.container {
  height: 100vh;
  background: #ffffff;
}
.container .main {
  width: 100%;
  height: 100%;
}
.container .main .main_wrap {
  display: flex;
  flex-direction: column;
  width: 660rpx;
  margin: 0 auto;
}
.container .main .main_wrap .input_box {
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-top: 30rpx;
}
.container .main .main_wrap .input_box .prefix {
  font-size: 30rpx;
  color: #333333;
  margin-top: 15rpx;
}
.container .main .main_wrap .input_box .input_wrap {
  display: flex;
  justify-content: flex-start;
  align-items: center;
  width: 484rpx;
  height: 80rpx;
  border-radius: 20rpx;
  background: #f8f8f8;
  font-size: 28rpx;
}
.container .main .main_wrap .input_box .input_wrap input {
  width: 100%;
  height: 100%;
  box-sizing: border-box;
  padding: 0 30rpx;
  word-break: break-all;
  white-space: wrap;
}
.container .main .main_wrap .input_box .input_wrap textarea {
  width: 100%;
  height: 100%;
  box-sizing: border-box;
  padding: 25rpx 30rpx;
  word-break: break-all;
  white-space: wrap;
}
.container .main .main_wrap .input_box .input_wrap .input_ph {
  font-size: 28rpx;
  color: #6c6c6c;
}
.container .main .main_wrap .input_box .extend {
  height: 160rpx;
  align-items: flex-start;
}
.container .main .main_wrap .default_box {
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 100%;
  margin-top: 30rpx;
}
.container .main .main_wrap .default_box .prefix {
  font-size: 30rpx;
  color: #333333;
}
.container .main .main_wrap .big {
  align-items: flex-start;
}
.container .add_btn {
  margin-top: 250rpx;
  background: #009944;
  display: flex;
  justify-content: center;
  align-items: center;
  width: 586rpx;
  height: 74rpx;
  color: #ffffff;
  font-size: 30rpx;
  border-radius: 40rpx;
}
